        "paragraph05": {
          "number": 5,
          "numberPosTop": 25,
          "numberPosLeft": 25,
          "text":{
            "english": "Your current activity score is shown here.",
            "turkish": "-",
            "arabic": "-"
          }
        },
        "paragraph06": {
          "number": 6,
          "numberPosTop": 30,
          "numberPosLeft": 30,
          "text":{
            "english": "You can attempt an activity three times. The highest score of your attempts is recorded in your report.",
